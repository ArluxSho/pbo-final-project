<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.pomodoro.controller.MainController">

    <!-- 1. BACKGROUND -->
    <!-- HAPUS TAG <image> DISINI SUPAYA AMAN DARI ERROR PATH -->
    <ImageView fx:id="backgroundImageView" fitWidth="1000" fitHeight="650" preserveRatio="false" />

    <!-- 2. DARK OVERLAY -->
    <Rectangle width="2000" height="2000" fill="black" opacity="0.6"/>

    <!-- 3. UI CONTENT -->
    <BorderPane>
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

        <!-- TOP: BACK BUTTON & HUD -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="&lt; Kembali ke Tugas" onAction="#backToTasks" 
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 20;"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- HUD Koin -->
                <HBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 5 15; -fx-background-radius: 20;">
                    <Label text="ðŸ’°" textFill="gold"/><Label fx:id="coinLabel" text="0" textFill="white"/>
                    <Label text="|"/>
                    <Label text="â¤ï¸" textFill="pink"/><ProgressBar fx:id="happinessBar" prefWidth="80" progress="0"/>
                </HBox>
            </HBox>
        </top>

        <!-- CENTER: TIMER -->
        <center>
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="lblCurrentTask" text="Focusing..." textFill="#f1c40f">
                    <font><Font name="System Bold" size="24"/></font>
                </Label>
                
                <Label fx:id="timerLabel" text="00:00" textFill="white">
                    <font><Font name="System Bold" size="90"/></font>
                    <effect><javafx.scene.effect.DropShadow radius="10"/></effect>
                </Label>
                
                <HBox alignment="CENTER" spacing="20">
                    <Button text="START" onAction="#handleStart" prefWidth="100" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
                    <Button text="PAUSE" onAction="#handlePause" prefWidth="100" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
                    <Button text="RESET" onAction="#handleReset" prefWidth="100" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
                </HBox>
            </VBox>
        </center>

        <!-- BOTTOM: SHOP -->
        <bottom>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Beri Makan (-20)" onAction="#handleFeed" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 20;"/>
                <Button text="Main Bola (-50)" onAction="#handlePlay" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 20;"/>
            </HBox>
        </bottom>

    </BorderPane>
</StackPane>