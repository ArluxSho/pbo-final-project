<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.pomodoro.controller.MainController"
           style="-fx-background-color: #2c3e50;">
           
    <VBox alignment="CENTER" spacing="20">
        <!--Logo cat-->
        <ImageView fitWidth="300" fitHeight="300" preserveRatio="true">
             <image><Image url="@../images/welcomeCat.gif"/></image>
        </ImageView>

        <Label text="PomoCat" textFill="white">
            <font><Font name="System Bold" size="48"/></font>
        </Label>
        
        <Label text="Focus &amp; Play: Your Virtual Pet Study Buddy" textFill="#bdc3c7">
            <font><Font size="18"/></font>
        </Label>
        
        <Region prefHeight="30"/>
        
        <Button text="START APPLICATION ->" onAction="#goToTaskPage" 
                style="-fx-background-color: #f1c40f; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 30; -fx-padding: 10 30; -fx-cursor: hand;"/>
    </VBox>
</StackPane>