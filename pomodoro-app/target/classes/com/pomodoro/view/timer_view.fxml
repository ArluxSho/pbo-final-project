<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pomodoro.controller.MainController"
      prefHeight="550.0" prefWidth="950.0" spacing="10">
    
    <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 30; -fx-border-radius: 10; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
        <Label text="My Tasks" textFill="#34495e">
            <font><Font name="System Bold" size="24"/></font>
        </Label>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="inputTask" promptText="Tambah tugas baru..." HBox.hgrow="ALWAYS" prefHeight="40">
                <font><Font size="14"/></font>
            </TextField>
            <Button text="+" onAction="#handleAddTask" prefWidth="50" prefHeight="40"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px; -fx-background-radius: 5;"/>
        </HBox>

        <ListView fx:id="taskListView" VBox.vgrow="ALWAYS" style="-fx-border-color: #ced4da; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        
        <Button text="Hapus Terpilih" onAction="#handleDeleteTask" 
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" 
                maxWidth="Infinity" prefHeight="40"/>
    </VBox>

    
    <StackPane prefWidth="450" HBox.hgrow="NEVER" style="-fx-background-radius: 10;">
        
        <ImageView fx:id="backgroundImageView" 
                   fitWidth="450" 
                   fitHeight="550" 
                   preserveRatio="false">
            <image>
                <Image url="@../images/CatNotStart.png" /> 
            </image>
        </ImageView>
        
        <VBox fx:id="timerContentBox"  
              alignment="CENTER" 
              spacing="30" 
              style="-fx-background-color: transparent; -fx-padding: 40;" 
              maxWidth="Infinity" 
              maxHeight="Infinity">
            
            <Label text="Fokus Mengerjakan:" textFill="#adb5bd">
                <font><Font name="System Bold" size="20"/></font>
            </Label>
            <Label fx:id="lblCurrentTask" text="Pilih tugas..." textFill="#ffc107" wrapText="true" textAlignment="CENTER">
                <font><Font name="System Italic" size="24"/></font>
            </Label>
            
            <Label fx:id="timerLabel" text="05:00" textFill="WHITE">
                <font><Font name="System Bold" size="96.0" /></font>
            </Label>

            <HBox alignment="CENTER" spacing="20">
                <Button text="Start" onAction="#handleStart" prefWidth="100" prefHeight="45"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                <Button text="Pause" onAction="#handlePause" prefWidth="100" prefHeight="45"
                        style="-fx-background-color: #ffc107; -fx-text-fill: #343a40; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5;"/>
                <Button text="Reset" onAction="#handleReset" prefWidth="100" prefHeight="45"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </StackPane>
</HBox>